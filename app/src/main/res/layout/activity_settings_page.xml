<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsPage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round"
        android:backgroundTint="@color/black"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:elevation="0dp"
            android:id="@+id/appbarSet">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarSet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:outlineAmbientShadowColor="@color/white">

                <TextView
                    android:id="@+id/toolbarTextViewSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:text="Settings"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round2"
            android:orientation="horizontal"
            android:padding="5dp">

            <Switch
                android:id="@+id/switchhidePosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Hide Posts" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round2"
            android:orientation="horizontal"
            android:padding="5dp">

            <Switch
                android:id="@+id/switchhideAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Hide Age" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round2"
            android:orientation="horizontal"
            android:padding="5dp">

            <Switch
                android:id="@+id/switchhideGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:text="Hide Gender" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round2"
            android:orientation="horizontal"
            android:padding="5dp">

            <Switch
                android:id="@+id/switchhideMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Hide Mobile" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round2"
            android:orientation="horizontal"
            android:padding="5dp">

            <Switch
                android:id="@+id/switchhideInterests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Hide Interests" />

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/black"
            android:elevation="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="12dp"
            android:background="@drawable/round2"
            android:paddingBottom="12dp"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:strokeColor="@color/yellow"
            app:strokeWidth="4dp" />

        <!--        <androidx.appcompat.widget.AppCompatButton-->
        <!--            android:id="@+id/btnSignIn"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="50dp"-->
        <!--            android:background="@drawable/round3"-->
        <!--            android:text="@string/sign_in"-->
        <!--            android:textColor="@android:color/white" />-->



        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:paddingTop="7dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="7dp"
            app:elevation="0dp"
            android:id="@+id/appbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:outlineAmbientShadowColor="@color/white">

                <TextView
                    android:id="@+id/toolbarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="#212121"
                    android:text="Other Options"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/linearlogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round2"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/settingslogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00B6DCF1"
                android:layout_marginStart="10dp"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineardelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round2"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/settingsdeleteprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="#00B6DCF1"
                android:text="Delete Profile"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>