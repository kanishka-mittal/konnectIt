<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/oppoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="20dp">

            <TextView
                android:padding="20dp"
                android:id="@+id/oppoMessage"
                android:background="@drawable/opo_msg_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You got this message"/>

            <TextView
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:id="@+id/oppoMsgTime"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25-11-2021"/>

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:id="@+id/myLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp">

            <TextView
                android:padding="20dp"
                android:id="@+id/myMessage"
                android:background="@drawable/my_msg_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You sent this message"/>

            <TextView
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:id="@+id/myMsgTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25-11-2021"
                android:textSize="10sp"
                android:layout_gravity="end"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>